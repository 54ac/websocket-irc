{
	"name": "websocket-irc",
	"description": "An IRC-like experience in the browser by using WebSockets.",
	"author": {
		"name": "54ac",
		"email": "me@54ac.bio",
		"url": "https://github.com/54ac"
	},
	"repository": "github:54ac/websocket-irc",
	"version": "0.3.0",
	"scripts": {
		"start": "concurrently \"mongod --dbpath=db\" \"nodemon server.js\" \"rd /s /q public && mkdir public && rollup -c -w\"",
		"build": "rd /s /q public && mkdir public && rollup -c"
	},
	"private": true,
	"browserslist": "defaults",
	"nodemonConfig": {
		"ignore": [
			"src/*",
			"package.json"
		]
	},
	"dependencies": {
		"bcrypt": "^5.0.0",
		"bufferutil": "^4.0.1",
		"modern-normalize": "^1.1.0",
		"mongodb": "^4.1.0",
		"utf-8-validate": "^5.0.2",
		"ws": "^8.1.0"
	},
	"devDependencies": {
		"@babel/cli": "^7.13.16",
		"@babel/core": "^7.14.0",
		"@babel/preset-env": "^7.14.1",
		"@rollup/plugin-babel": "^5.2.2",
		"@rollup/plugin-commonjs": "^20.0.0",
		"@rollup/plugin-json": "^4.1.0",
		"@rollup/plugin-node-resolve": "^13.0.0",
		"browserlist": "^1.0.1",
		"concurrently": "^6.2.1",
		"html-minifier-terser": "^5.1.1",
		"nodemon": "^2.0.6",
		"postcss": "^8.2.15",
		"postcss-copy": "^7.1.0",
		"postcss-preset-env": "^6.7.0",
		"rollup": "^2.47.0",
		"rollup-plugin-copy-watch": "^0.0.1",
		"rollup-plugin-inject-process-env": "^1.3.1",
		"rollup-plugin-livereload": "^2.0.0",
		"rollup-plugin-postcss": "^4.0.0",
		"rollup-plugin-serve": "^1.1.0",
		"rollup-plugin-terser": "^7.0.2"
	}
}
